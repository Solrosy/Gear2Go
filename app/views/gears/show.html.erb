<div class="container">
<h1><%= @gear.name %></h1>
<div><%= @gear.description %></div>
<div><%= @gear.hourly_rate %> / hour</div>
</div>

<div>
<%= form_with(model: [@gear, @booking], url: gear_bookings_path(@gear)) do |form| %>
  <div>
    <%= form.label :start_time, "Select Date and Time" %>
    <%= form.datetime_local_field :start_time, value: DateTime.now.strftime('%Y-%m-%dT%H:%M'), min: DateTime.now.strftime('%Y-%m-%dT%H:%M') %>
  </div>

  <div>
    <%= form.label :first_name %>
    <%= form.text_field :first_name %>
  </div>

  <div>
    <%= form.label :last_name %>
    <%= form.text_field :last_name %>
  </div>

  <div>
    <%= form.label :email %>
    <%= form.email_field :email %>
  </div>

  <div>
    <%= form.submit "Continue" %>
  </div>
<% end %>


</div>
