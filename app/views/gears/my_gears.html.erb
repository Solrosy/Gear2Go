<h1>Your Gears</h1>
  <div class="mb-5">
    <%= link_to 'Add Gear', new_gear_path, class: "btn btn-primary"  %>
  </div>

<div class="row">
  <% @gears.each do |gear| %>
    <div class="col-md-4 mb-4">
      <div class="card bg-light-subtle">
        <% if gear.photo.key? %>
          <%= cl_image_tag gear.photo.key, class: "card-img-top rounded-top-4", height: 200, width: 400%>
        <% else %>
          <img src="https://source.unsplash.com/random?boat" class="card-img-top rounded-top-4" alt="...">
        <% end %>
        <div class="card-body">
          <h5 class="card-title fs-3"><%= gear.name %></h5>
          <p class="card-text"><strong>Number:</strong> <%= gear.id %></p>
          <p class="card-text"><strong>Description:</strong> <%= gear.description %></p>
          <p class="card-text"><strong>Price:</strong> <%= gear.hourly_rate %> â‚¬</p>
        </div>
        <div class="card-footer d-flex justify-content-between">
          <%= link_to 'Edit', edit_gear_path(gear), class: " text-white btn btn-primary" %>
          <%= form_with(url: my_gear_path(gear), method: :delete, local: true, data: { confirm: 'Are you sure?' }) do |form| %>
            <%= form.submit 'Delete', class: 'btn btn-danger' %>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>
