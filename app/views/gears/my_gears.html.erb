<h1>Your Gears</h1>
  <div class="mb-5">
    <%= link_to 'Add Gear', new_gear_path, class: "btn btn-primary"  %>
  </div>

  <% @gears.each do |gear| %>
    <div>
      <h2><%= gear.name %></h2>
      <% if gear.photo.key? %>
          <%= cl_image_tag gear.photo.key, class: "card-img-top rounded-top-4", height: 200, width: 400 %>
        <% else %>
          <img src="https://source.unsplash.com/random?boat" class="card-img-top rounded-top-4" alt="...">
        <% end %>
      <div>Number: <%= gear.id %></div>
      <div>Description: <%= gear.description %></div>
      <div>Price: <%= gear.hourly_rate %> â‚¬ </div>
    <div>
    <div class="d-flex">
      <div class="m-2"><%= link_to 'Edit', edit_gear_path(gear), class: "btn btn-secondary" %></div>
      <div class="m-2">
        <%= form_with(url: my_gear_path(gear), method: :delete, local: true, data: { confirm: 'Are you sure?' }) do |form| %>
        <%= form.submit 'Delete', class: 'btn btn-secondary' %>
        <% end %>
      </div>
    </div>
  <% end %>
