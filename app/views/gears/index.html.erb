<h1 class="text-center fw-bolder my-3 display-5">Book your holiday gears online</h1>

<div class="mt-4 row justify-content-center">
  <div class="col col-sm-12 col-md-12 col-lg-8 my-3">
    <%= form_with method: :get, url: root_path, class: "d-flex" do %>
    <div class="input-group">
      <%= text_field_tag :query, params[:query], class: "form-control form-control-lg bg-subtle rounded-4", placeholder: "Search by location" %>
      <%= submit_tag "Search", class: "rounded-end-4 px-5 btn btn-secondary", type: "button" %>
      </div>
    <% end %>
  </div>
</div>

<%= render "shared/gears_card", gears: @gears %>
