<div class="navbar navbar-expand navbar-lewagon bg-warning-subtle border-bottom box-shadow">
  <div class="container-fluid p-2">
    <%= link_to root_path, class: "navbar-brand" do %>
      <span class="h2"><i class="fa-solid fa-umbrella-beach mx-1 px-1"></i>Gear2Go</span>
    <% end %>

    <div class="navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <% if !user_signed_in? %>
          <li class="nav-item">
            <%= link_to "Login", new_user_session_path, class: "nav-link" %>
          </li>
        <% else %>
          <li class="nav-item"> <span class="nav-link"><%= current_user.business_name ? "#{current_user.business_name}" : "" %></span></li>
          <li class="nav-item dropdown">
            <img class="avatar dropdown-toggle mx-2" id="navbarDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false" src="https://source.unsplash.com/random?people,profile,photo" />
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <%= link_to "Bookings", dashboard_path, class: "dropdown-item" %>
              <%= link_to 'Gears', dashboard_gears_path, class: "dropdown-item" %>
              <%= link_to "Account", edit_user_registration_path, class: "dropdown-item" %>
              <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: "dropdown-item" %>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
